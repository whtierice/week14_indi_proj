root = true                     # 이 디렉터리가 최상위 설정임을 표시
[*]                             # 모든 파일에 적용
charset = utf-8                 # 문자 인코딩은 UTF-8
end_of_line = lf                # 줄바꿈은 LF (Unix 스타일)
insert_final_newline = true     # 파일 끝에 항상 개행 한 줄 추가
trim_trailing_whitespace = true # 줄 끝의 불필요한 공백 제거
indent_style = space            # 들여쓰기는 스페이스로
indent_size = 2                 # 스페이스 2칸